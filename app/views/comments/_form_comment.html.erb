<div class= "form-comment">
  <%= form_for @comment, url: comment_path, remote: true  do |f| %>
    <% if parent_id == Settings.parent_id_default %>
      <%= render "shared/error_messages", object: f.object  %>
    <% end %>
    <div class="form-group">
      <%= f.text_area :content, class: "form-control", rows: "3", placeholder: t("comment.yourthink") %>
    </div>
      <%= f.hidden_field :comment_id, value: "#{params[:id]}" %>
      <%= f.hidden_field :comment_type, value: @comment_type %>
      <%= f.hidden_field :parent_id, value: "#{parent_id}" %>
    <div class="form-group">
      <% if parent_id == Settings.parent_id_default %>
        <%= f.submit t("comment.comment"), class: "btn btn-primary" %>
      <% else %>
        <%= f.submit t("comment.reply"), class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>

</div>
